      // Fetch availability data for this month
      await loadAvailability(year, month);

      calendar.innerHTML = '';

      // æ›œæ—¥ãƒ˜ãƒƒãƒ€ãƒ¼
      const dayNames = ['æ—¥', 'æœˆ', 'ç«', 'æ°´', 'æœ¨', 'é‡‘', 'åœŸ'];
      dayNames.forEach(day => {
        const header = document.createElement('div');
        header.className = 'calendar-day-header';
        header.textContent = day;
        calendar.appendChild(header);
      });

      // æœˆã®æœ€åˆã®æ—¥ã¨æœ€å¾Œã®æ—¥
      const firstDay = new Date(year, month, 1);
      const lastDay = new Date(year, month + 1, 0);
      const today = new Date();
      today.setHours(0, 0, 0, 0);

      // å‰æœˆã®æ—¥ä»˜ã§åŸ‹ã‚ã‚‹
      const startDay = firstDay.getDay();
      for (let i = startDay - 1; i >= 0; i--) {
        const date = new Date(year, month, -i);
        createDayElement(date, true);
      }

      // å½“æœˆã®æ—¥ä»˜
      for (let day = 1; day <= lastDay.getDate(); day++) {
        const date = new Date(year, month, day);
        createDayElement(date, false);
      }

      // æ¬¡æœˆã®æ—¥ä»˜ã§åŸ‹ã‚ã‚‹
      const remainingDays = 7 - (calendar.children.length % 7);
      if (remainingDays < 7) {
        for (let i = 1; i <= remainingDays; i++) {
          const date = new Date(year, month + 1, i);
          createDayElement(date, true);
        }
      }
    }

    function createDayElement(date, isOtherMonth) {
      const day = document.createElement('div');
      day.className = 'calendar-day';

      if (isOtherMonth) {
        day.classList.add('other-month');
      }

      const today = new Date();
      today.setHours(0, 0, 0, 0);

      if (date.getTime() === today.getTime()) {
        day.classList.add('today');
      }

      // éå»ã®æ—¥ä»˜ã¯äºˆç´„ä¸å¯
      if (date < today) {
        day.classList.add('unavailable');
      } else {
        // å®Ÿéš›ã®ç©ºãçŠ¶æ³ã‚’è¡¨ç¤º
        const dateStr = formatDateISO(date);
        const availability = availabilityData[dateStr];

        if (availability) {
          if (availability.is_closed) {
            day.classList.add('unavailable');
          } else {
            // ç©ºãçŠ¶æ³ã‚’åˆ¤å®š
            const availableSlots = [
              availability.morning_available,
              availability.afternoon_available,
              availability.evening_available
            ].filter(Boolean).length;

            if (availableSlots === 3) {
              day.classList.add('available');
            } else if (availableSlots > 0) {
              day.classList.add('partially-available');
            } else {
              day.classList.add('unavailable');
            }
          }
        } else {
          // ãƒ‡ãƒ¼ã‚¿ãŒãªã„å ´åˆã¯äºˆç´„å¯èƒ½ã¨ä»®å®š
          day.classList.add('available');
        }
      }

      const dayNumber = document.createElement('div');
      dayNumber.className = 'day-number';
      dayNumber.textContent = date.getDate();

      const dayStatus = document.createElement('div');
      dayStatus.className = 'day-status';
      if (day.classList.contains('available')) {
        dayStatus.textContent = 'â—¯';
      } else if (day.classList.contains('partially-available')) {
        dayStatus.textContent = 'â–³';
      } else if (day.classList.contains('unavailable')) {
        dayStatus.textContent = 'Ã—';
      }

      day.appendChild(dayNumber);
      day.appendChild(dayStatus);

      if (!day.classList.contains('unavailable') && !isOtherMonth) {
        day.onclick = () => selectDate(date, day);
      }

      document.getElementById('calendar').appendChild(day);
    }

    async function selectDate(date, element) {
      // ä»¥å‰ã®é¸æŠã‚’è§£é™¤
      document.querySelectorAll('.calendar-day.selected').forEach(el => {
        el.classList.remove('selected');
      });

      element.classList.add('selected');
      selectedDate = date;

      const year = date.getFullYear();
      const month = String(date.getMonth() + 1).padStart(2, '0');
      const day = String(date.getDate()).padStart(2, '0');
      const dateStr = `${year}-${month}-${day}`;

      document.getElementById('selectedDate').value = `${year}å¹´${month}æœˆ${day}æ—¥`;

      // Check if selected date is weekend or holiday
      const dayOfWeek = date.getDay();
      const isWeekend = dayOfWeek === 0 || dayOfWeek === 6;
      const isHoliday = holidays.has(dateStr);
      isSelectedDateWeekendOrHoliday = isWeekend || isHoliday;

      // Update price labels based on selected date
      updatePriceLabels();
      calculatePrice();
      updateSubmitButton();
    }

    function previousMonth() {
      currentDate.setMonth(currentDate.getMonth() - 1);
      generateCalendar(currentDate.getFullYear(), currentDate.getMonth());
    }

    function nextMonth() {
      currentDate.setMonth(currentDate.getMonth() + 1);
      generateCalendar(currentDate.getFullYear(), currentDate.getMonth());
    }

    function updatePriceLabels() {
      // Get the appropriate prices based on whether the selected date is weekend/holiday
      const morningPrice = isSelectedDateWeekendOrHoliday && room.weekendPriceMorning !== null
        ? room.weekendPriceMorning
        : room.basePriceMorning || 0;
      const afternoonPrice = isSelectedDateWeekendOrHoliday && room.weekendPriceAfternoon !== null
        ? room.weekendPriceAfternoon
        : room.basePriceAfternoon || 0;
      const eveningPrice = isSelectedDateWeekendOrHoliday && room.weekendPriceEvening !== null
        ? room.weekendPriceEvening
        : room.basePriceEvening || 0;

      // Update labels
      const dateType = isSelectedDateWeekendOrHoliday ? 'åœŸæ—¥ç¥æ–™é‡‘' : 'å¹³æ—¥æ–™é‡‘';
      document.getElementById('morningLabel').innerHTML = `åˆå‰ï¼ˆ9:00-12:00ï¼‰ - Â¥${morningPrice.toLocaleString()} <span style="color: #6b7280; font-size: 0.875rem;">(${dateType})</span>`;
      document.getElementById('afternoonLabel').innerHTML = `åˆå¾Œï¼ˆ13:00-17:00ï¼‰ - Â¥${afternoonPrice.toLocaleString()} <span style="color: #6b7280; font-size: 0.875rem;">(${dateType})</span>`;
      document.getElementById('eveningLabel').innerHTML = `å¤œé–“ï¼ˆ18:00-21:30ï¼‰ - Â¥${eveningPrice.toLocaleString()} <span style="color: #6b7280; font-size: 0.875rem;">(${dateType})</span>`;
    }

    function calculatePrice() {
      const slots = document.querySelectorAll('input[name="slot"]:checked');
      let total = 0;

      slots.forEach(slot => {
        if (slot.value === 'morning') {
          const price = isSelectedDateWeekendOrHoliday && room.weekendPriceMorning !== null
            ? room.weekendPriceMorning
            : room.basePriceMorning || 0;
          total += price;
        }
        if (slot.value === 'afternoon') {
          const price = isSelectedDateWeekendOrHoliday && room.weekendPriceAfternoon !== null
            ? room.weekendPriceAfternoon
            : room.basePriceAfternoon || 0;
          total += price;
        }
        if (slot.value === 'evening') {
          const price = isSelectedDateWeekendOrHoliday && room.weekendPriceEvening !== null
            ? room.weekendPriceEvening
            : room.basePriceEvening || 0;
          total += price;
        }
      });

      document.getElementById('basePrice').textContent = 'Â¥' + total.toLocaleString();
      document.getElementById('totalPrice').textContent = 'Â¥' + total.toLocaleString();

      updateSubmitButton();
    }

    function updateSubmitButton() {
      const slots = document.querySelectorAll('input[name="slot"]:checked');
      const submitBtn = document.getElementById('submitBtn');

      if (selectedDate && slots.length > 0) {
        submitBtn.disabled = false;
      } else {
        submitBtn.disabled = true;
      }
    }

