    }

    function displayReviews(reviews, stats) {
      document.getElementById('emptyReviews').style.display = 'none';
      document.getElementById('ratingOverview').style.display = 'grid';

      // å¹³å‡è©•ä¾¡ã‚’è¡¨ç¤º
      document.getElementById('averageRating').textContent = stats.average.toFixed(1);
      document.getElementById('reviewCount').textContent = stats.count + 'ä»¶ã®ãƒ¬ãƒ“ãƒ¥ãƒ¼';

      // æ˜Ÿè©•ä¾¡ã‚’è¡¨ç¤º
      const stars = generateStars(stats.average);
      document.getElementById('averageStars').innerHTML = stars;

      // è©•ä¾¡åˆ†å¸ƒã‚’è¡¨ç¤º
      const distributionEl = document.getElementById('ratingDistribution');
      distributionEl.innerHTML = '';

      for (let rating = 5; rating >= 1; rating--) {
        const count = stats.distribution[rating] || 0;
        const percentage = stats.count > 0 ? (count / stats.count) * 100 : 0;

        const barDiv = document.createElement('div');
        barDiv.className = 'rating-bar';
        barDiv.innerHTML = `
          <div class="rating-label">${rating}â˜…</div>
          <div class="rating-bar-bg">
            <div class="rating-bar-fill" style="width: ${percentage}%"></div>
          </div>
          <div class="rating-bar-count">${count}ä»¶</div>
        `;
        distributionEl.appendChild(barDiv);
      }

      // ãƒ¬ãƒ“ãƒ¥ãƒ¼ä¸€è¦§ã‚’è¡¨ç¤º
      const reviewListEl = document.getElementById('reviewList');
      reviewListEl.innerHTML = '';

      reviews.forEach(review => {
        const reviewDiv = document.createElement('div');
        reviewDiv.className = 'review-item';

        const displayName = review.user_nickname || review.user_name;
        const initial = displayName.charAt(0);
        const createdDate = new Date(review.created_at).toLocaleDateString('ja-JP');

        reviewDiv.innerHTML = `
          <div class="review-header">
            <div class="reviewer-info">
              <div class="reviewer-avatar">${initial}</div>
              <div>
                <div class="reviewer-name">${displayName}</div>
                <div class="review-date">${createdDate}</div>
              </div>
            </div>
            <div class="review-rating">${generateStars(review.rating)}</div>
          </div>
          <div class="review-title">${escapeHtml(review.title)}</div>
          ${review.comment ? `<div class="review-comment">${escapeHtml(review.comment)}</div>` : ''}
        `;

        reviewListEl.appendChild(reviewDiv);
      });
    }

    function generateStars(rating) {
      const fullStars = Math.floor(rating);
      const hasHalfStar = rating % 1 >= 0.5;
      let stars = '';

      for (let i = 0; i < fullStars; i++) {
        stars += 'â˜…';
      }
      if (hasHalfStar) {
        stars += 'â˜†';
      }
      while (stars.length < 5) {
        stars += 'â˜†';
      }

      return stars;
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

