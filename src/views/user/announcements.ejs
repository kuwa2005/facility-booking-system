  <script>
    async function loadAnnouncements() {
      try {
        const response = await fetch('/api/user/announcements');
        const result = await response.json();

        document.getElementById('loading').style.display = 'none';

        if (result.success && result.data && result.data.length > 0) {
          displayAnnouncements(result.data);
        } else {
          document.getElementById('emptyState').style.display = 'block';
        }
      } catch (error) {
        console.error('Failed to load announcements:', error);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('emptyState').style.display = 'block';
      }
    }

    function displayAnnouncements(announcements) {
      const list = document.getElementById('announcementsList');
      list.style.display = 'flex';
      list.innerHTML = '';

      announcements.forEach(announcement => {
        const card = document.createElement('div');
        const isImportant = announcement.priority === 'high';
        card.className = 'announcement-card' + (isImportant ? ' important' : '');

        const createdDate = new Date(announcement.created_at).toLocaleDateString('ja-JP', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        card.innerHTML = `
          <div class="announcement-header">
            <div>
              <h3 class="announcement-title">${escapeHtml(announcement.title)}</h3>
              <p class="announcement-date">${createdDate}</p>
            </div>
            <span class="announcement-badge ${isImportant ? 'badge-important' : 'badge-normal'}">
              ${isImportant ? 'é‡è¦' : 'é€šå¸¸'}
            </span>
          </div>
          <div class="announcement-content">${escapeHtml(announcement.content)}</div>
        `;

        list.appendChild(card);
      });
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

