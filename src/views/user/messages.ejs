          document.getElementById('threadSection').style.display = 'none';
          return;
        }

        const threadResult = await threadResponse.json();

        if (threadResult.success && threadResult.data && threadResult.data.length > 0) {
          displayThread(threadResult.data);
        } else {
          document.getElementById('threadSection').style.display = 'none';
