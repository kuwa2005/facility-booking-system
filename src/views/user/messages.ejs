    async function loadMessageThread(messageId) {
      try {
        // parent_message_idã‚’ä½¿ã£ã¦ã‚¹ãƒ¬ãƒƒãƒ‰ã‚’å–å¾—
        // ã“ã®å®Ÿè£…ã§ã¯ã€ç¾åœ¨ã®ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã«å¯¾ã™ã‚‹è¿”ä¿¡ã‚’è¡¨ç¤º
        const threadResponse = await fetch(`/api/user/messages/${messageId}/thread`);

