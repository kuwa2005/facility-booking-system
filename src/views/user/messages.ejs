    function displayThread(messages) {
      const threadContainer = document.getElementById('threadMessages');
      threadContainer.innerHTML = '';

      if (!messages || messages.length === 0) {
        document.getElementById('threadSection').style.display = 'none';
        return;
      }

      document.getElementById('threadSection').style.display = 'block';

      messages.forEach(msg => {
        const threadMsg = document.createElement('div');
