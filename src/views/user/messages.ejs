  <script>
    let currentMessages = [];
    let currentMessageId = null;
    let messageIdToDelete = null;

    async function loadMessages() {
      try {
        const response = await fetch('/api/user/messages');
        const result = await response.json();

        document.getElementById('loading').style.display = 'none';

        if (result.success && result.data && result.data.length > 0) {
          currentMessages = result.data;
          displayMessages(result.data);
        } else {
          document.getElementById('emptyState').style.display = 'block';
        }
      } catch (error) {
        console.error('Failed to load messages:', error);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('emptyState').style.display = 'block';
      }
    }

    function displayMessages(messages) {
      const container = document.getElementById('messagesContainer');
      container.style.display = 'block';
      container.innerHTML = '';

      messages.forEach(message => {
        const item = document.createElement('div');
        item.className = 'message-item' + (!message.is_read ? ' unread' : '');

        const createdDate = new Date(message.created_at).toLocaleDateString('ja-JP', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });

        // ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸æœ¬æ–‡ã®ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’ç”Ÿæˆï¼ˆæœ€åˆã®100æ–‡å­—ï¼‰
        const preview = message.content.length > 100
          ? message.content.substring(0, 100) + '...'
          : message.content;

        item.innerHTML = `
          <div class="message-content" onclick="viewMessage(${message.id})">
            <div class="message-header">
              ${!message.is_read ? '<span class="unread-badge">æœªèª­</span>' : ''}
              <span class="message-subject">${escapeHtml(message.subject)}</span>
            </div>
            <p class="message-preview">${escapeHtml(preview)}</p>
          </div>
          <div class="message-meta">
            <span class="message-date">${createdDate}</span>
            <div class="message-actions">
              <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); deleteMessage(${message.id})">å‰Šé™¤</button>
            </div>
          </div>
        `;

        container.appendChild(item);
      });
    }

    async function viewMessage(messageId) {
      const message = currentMessages.find(m => m.id === messageId);
      if (!message) return;

      // ç¾åœ¨ã®ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸IDã‚’ä¿å­˜
      currentMessageId = messageId;

      // ãƒ¢ãƒ¼ãƒ€ãƒ«ã«å†…å®¹ã‚’è¡¨ç¤º
      document.getElementById('modalSubject').textContent = message.subject;
      document.getElementById('modalContent').textContent = message.content;

      const date = new Date(message.created_at).toLocaleString('ja-JP', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
